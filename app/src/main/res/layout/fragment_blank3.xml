<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment3">

    <LinearLayout
        android:background="#68000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#68000000"
            android:text="个人信息"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="19sp"
            />
        <ImageView
            android:background="@mipmap/iconnn"
            android:id="@+id/avatar"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            >

        </ImageView>
        <TextView
            android:layout_marginTop="80dp"
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="username:null"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/nickname"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="nikename:null"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/info"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"
            android:text="info:null"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/gender"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="gender:null"
            android:textSize="20dp"
            />
        <TextView
        android:id="@+id/star_num"
        android:layout_width="250dp"
        android:layout_height="50dp"
            android:text="star_num:null"
            android:textSize="20dp"
        />
        <TextView
            android:id="@+id/my_context"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="mycontent:null"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/change"
                android:layout_width="80dp"
                android:layout_height="50dp"
                />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/exit"
                android:layout_width="80dp"
                android:layout_height="50dp"
                />
        </LinearLayout>
    </LinearLayout>




</FrameLayout>