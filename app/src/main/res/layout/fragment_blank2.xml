<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment2">
    <LinearLayout
        android:background="#68000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#68000000"
                >
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/backto2"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:text="清除"
                    android:textSize="20sp"
                    android:background="#68000000"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:background="#68000000"
                    >
                    <Button
                        android:id="@+id/fabiao"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="7dp"
                        android:text="发表"
                        android:textSize="20sp"
                        android:background="@drawable/edit_back2"
                        android:layout_marginRight="10dp"

                        />
                </LinearLayout>
        </LinearLayout>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/maketitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入标题"
            android:textColorHint="#939090"
            android:textColor="#C6BCBC"
            android:singleLine="true"
            android:background="@null"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:id="@+id/makecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:hint="请输入文章内容"
            android:textColorHint="#939090"
            android:textColor="#DAD0D0"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/makeimage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/more2"
            />
    </LinearLayout>



</FrameLayout>